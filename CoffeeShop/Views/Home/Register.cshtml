@{
    ViewBag.Title = "Register";
}
<style>
    h2{
        text-align: center;
    }
    h3{
        text-align: center;
    }
    fieldset {
        border:5px solid brown;
    }
    #RegForm{
        text-align:center;
        font-weight:bold;    
    }

</style>
<!--<h2>@ViewBag.Title</h2>-->
<h3>@ViewBag.Message</h3>
     
        <form name="Reg" id="RegForm" action="Success" method="get" onsubmit="return validateForm()">
            <fieldset>
                <legend>Register a new account below</legend>
                <p><em>First Name:</em></p>
                <input id="First" type="text" name="FirstName" />
                <p><em>Last Name:</em></p>
                <input id="Last" type="text" name="LastName" />
                <p><em>Email:</em></p>
                <input id="Email" type="text" name="EmailAddress" />
                <p><em>Password:</em></p>
                <input id="Password" type="text" name="Password" />
                <p><em>Confirm Password:</em></p>
                <input id="ConfirmPassword" type="text" />
            </fieldset>
                <br /><br />
                <input type="submit" name="submit" value="Submit">
            
        </form>


<!--The following script  validates the FirstName and Email
    address inputs in the registration form.-->
<script>
  function validateForm() { 
    var fFirstName = $("#First").val();   
    if (fFirstName === "") {
      alert("Please enter your first name.");
      return false;
    }
    var fLastName = $("#Last").val();
    if (fLastName === "") {
        alert("Please enter your last name.");
        return false;
    }
    var fEmail = $("#Email").val();
    if (fEmail === "") {
      alert("Please enter your email address.");
      return false;
    }
    var firstPassword = $("#Password").val();
    var secondPassword = $("#ConfirmPassword").val();
    if (firstPassword != secondPassword)  {
        alert("Passwords do not match.");
        return false;
    }
}
  
</script>

